{
  "name": "Chrome Extension",
  "description": "Make Chrome Extension",
  "version": "1.0.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
      "16": "images/icon16.png",
      "24": "images/icon24.png",
      "32": "images/icon32.png"
    },
    "default_title": "Click Me",
    "default_popup": "index.html"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "./main.js",
        "./content.js",
        "./chunk.js"
      ],
      "css": [
        "./main.css"
      ],
      "run_at": "document_end"
    }
  ],
  "permissions": [
    "activeTab",
    "storage",
    "tabs"
  ],
  "icons": {
    "16": "./images/icon16.png",
    "48": "./images/icon48.png",
    "128": "./images/icon128.png"
  },
  "host_permissions": [
    "*://*.amazon.com/"
  ],
  "externally_connectable": {
    "matches": [
      "https://*.groceryswap.app/*",
      "*://localhost/*"
    ]
  },
  "web_accessible_resources": [
    {
      "resources": [
        "/static/media/*"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}
